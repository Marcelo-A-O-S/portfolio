{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug with ts-node-dev",
        "runtimeExecutable": "npx",     // Para rodar o ts-node-dev usando npx
        "runtimeArgs": ["tsnd","./src"],  // Usa ts-node-dev e habilita o modo de inspeção para debugging
        "sourceMaps": true,              // Usa source maps para mapear TypeScript para JavaScript no debug
        "cwd": "${workspaceFolder}/backend-node-portifolio",  // Define a raiz do projeto 
        "restart": true,                 // Habilita reinicialização automática
      }
    ]
  }